    static String getDocumentExtension(){
        String filter = nilptr;
        ProjectPropInterface prop = XWorkspace.workspace.getCurrentProjectProp();
        if (prop != nilptr){
            filter = prop.getFileExtensionFilter();
        }
        if (filter != nilptr){
            filter = filter.trim(true);
        }
        
        if (filter == nilptr){
            filter = "";
        }else
        if (filter.length() > 0){
            if (filter.endWith(";;") == false){
                filter = filter + ";;";
            }
        }
        return filter + "All Files(*.* *)";
    }
    
    public void saveFileAs() {
        if (readonlyResp == ReadResp.NO_CHARSET){
            QXMessageBox.Critical("注意","未选择有效的编码,文件将锁定为只读,保存或者编辑将使文件损坏.",QXMessageBox.Ok,QXMessageBox.Ok);
            return;
        }
        
        String file = QXFileDialog.getSaveFileName("保存文件", filePath,  getDocumentExtension(), this);
        if (file != nilptr && file.length() > 0) {
            saveAs(file);
        }
    }

    public bool saveAs(@NotNilptr String path) {
        pauseWatch();
        try {
            FileOutputStream fis = new FileOutputStream(path);
            try {
                String content = _sci.getText();
                byte [] data;
                if (defaultCharset != nilptr){
                    try{
                        data = content.getBytes(defaultCharset);
                    }catch(Exception e){
                        QXMessageBox.Warning("注意","文件不能以编码 " + defaultCharset + " 进行保存, 将存储为 UTF-8 编码.",QXMessageBox.Ok,QXMessageBox.Ok);
                        data = content.getBytes();
                    }
                }else{
                    data = content.getBytes();
                }
                
                fis.write(data);
                fis.close();//必须close 不然GC 关闭文件的时候在watch之后 , watch 会报告被更改

                _sci.setSavePoint();
                removeAllModified();

                removeFromMap(filePath);
                filePath = String.formatPath(path,false).replace("\\","/");
                addToMap(filePath);

                updateTitle();
                continueWatch();
                return true;
            } catch(Exception e) {
            }
        } catch(Exception e) {
            Critical("注意", "文件无法在此位置保存,或者此文件正被其他程序使用,请重新选择路径", QXMessageBox.Ok, QXMessageBox.Ok);
        }

        continueWatch();

        return false;
    }


