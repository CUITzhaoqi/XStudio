    public void breakOn(int line, int column, bool set, bool active, bool onlyActive) {
        if (set) {
            _sci.goto(line, 1);
            if (onlyActive == false) {
                _sci.sendEditor(QXSci.SCI_MARKERADD, line, MARK_POINTER);
            }
            setActive(true);
            if (active) {
                _mdi_area.setActiveSubWindow(this);
            }
        } else if (onlyActive == false) {
            _sci.sendEditor(QXSci.SCI_MARKERDELETE, line, MARK_POINTER);
        }
    }

