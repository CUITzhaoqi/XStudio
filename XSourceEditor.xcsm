        if (autoLoad == true || QXMessageBox.Yes == QXMessageBox.Question("注意", "检测到文件:" + filePath + "已被外部程序改变,是否重新加载?", QXMessageBox.Yes, QXMessageBox.No)) {
            reloadFile(loadAsCharset);
        }
    }

