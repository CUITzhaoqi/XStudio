    public static bool closeAllWindows() {

        Map.Iterator<String, XSourceEditor> iterator = editorMgr.iterator();

        while (iterator.hasNext()) {
            XSourceEditor wnd = iterator.getValue();

            if (wnd != nilptr && wnd.requestClose() == false) {
                return false;
            }

            iterator.next();
        }

        return true;
    }

